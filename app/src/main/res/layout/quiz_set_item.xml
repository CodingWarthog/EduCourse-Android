<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:id="@+id/quiz_card"
                                    android:layout_margin="2dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_margin="1dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/score_txt_quiz"
                android:layout_toStartOf="@+id/imageView2" android:layout_marginEnd="5dp" android:layout_marginTop="2dp"
                android:layout_alignParentTop="true" android:textStyle="bold"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/name_txt_quiz" android:textSize="16sp"
                android:textStyle="bold" android:layout_alignParentEnd="true" android:layout_marginEnd="8dp"
                android:layout_toEndOf="@+id/imageView2" android:layout_marginStart="2dp" android:layout_marginTop="8dp"
                android:layout_alignParentTop="true"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/lvl_txt_quiz"
                android:layout_below="@+id/name_txt_quiz"
                android:layout_alignParentEnd="true" android:layout_marginEnd="8dp"
                android:layout_toEndOf="@+id/imageView2" android:layout_marginStart="2dp"/>
        <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp" app:srcCompat="@drawable/quiz_icon"
                android:id="@+id/imageView2"
                android:layout_marginTop="2dp" android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" android:layout_marginStart="4dp"
                android:layout_marginBottom="2dp" android:layout_marginEnd="2dp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>