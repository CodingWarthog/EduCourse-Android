<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_margin="2dp"
                                    android:layout_height="wrap_content" android:id="@+id/flashcard_card"
                                    app:cardBackgroundColor="@color/colorSelectedButton">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:padding="2dp">

        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/name_txt_card" android:textSize="20sp"
                android:textStyle="bold" android:layout_toEndOf="@+id/imageView2"
                android:layout_marginTop="2dp" android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/front_flag_image" android:layout_marginEnd="4dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/description_txt_card"
                android:layout_marginTop="2dp" android:textSize="16sp"
                android:layout_below="@+id/name_txt_card" android:layout_toEndOf="@+id/imageView2"
                android:layout_marginEnd="4dp" android:layout_marginBottom="2dp"
                android:layout_toStartOf="@+id/front_flag_image"/>
        <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp" app:srcCompat="@drawable/flashcardset_icon"
                android:id="@+id/imageView2"
                android:padding="2dp" android:layout_margin="2dp"/>

        <ImageView android:layout_width="40dp" android:layout_height="25dp" android:layout_alignParentEnd="true"
                   android:layout_marginEnd="4dp" android:layout_marginTop="4dp"
                   android:id="@+id/front_flag_image"
                   android:layout_alignParentTop="true" android:background="@color/buttonTextColor"
                   android:padding="1dp"/>
        <ImageView android:layout_width="40dp" android:layout_height="25dp" android:layout_alignParentEnd="true"
                   android:layout_marginEnd="4dp" android:layout_marginTop="4dp"
                   android:id="@+id/back_flag_image"
                   android:layout_below="@+id/front_flag_image" android:background="@color/buttonTextColor"
                   android:padding="1dp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>