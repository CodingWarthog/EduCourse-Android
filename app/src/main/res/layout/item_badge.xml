<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/badgeCard"
                                    android:background="#00000000"
                                    app:cardBackgroundColor="@color/transparent" android:layout_margin="2dp">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
                    android:background="@color/backgroundBadge"
                    android:id="@+id/card_relative">

        <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="2dp"
                android:id="@+id/badge_image"
                android:layout_marginTop="2dp" android:layout_marginStart="2dp" android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp" android:src="@mipmap/ic_launcher"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Title"
                  android:textSize="20sp"
                  android:layout_alignParentTop="true"
                  android:layout_toEndOf="@+id/badge_image"
                  android:textColor="@color/titleBadge"
                  android:id="@+id/titleView" android:layout_margin="2dp"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textSize="16sp"
                  android:layout_toEndOf="@+id/badge_image"
                  android:layout_below="@+id/titleView"
                  android:id="@+id/descriptionView"
                  android:text="description"
        />
        <TextView
                android:text="100 punktÃ³w"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/pointsView" android:layout_alignParentEnd="true"
                android:layout_marginEnd="4dp" android:layout_marginTop="2dp" android:layout_alignParentTop="true"
                android:textSize="14sp"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>