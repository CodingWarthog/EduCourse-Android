<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".profile.InfoFragment" android:id="@+id/fragment_info">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBarProfile"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp" android:id="@+id/text_name_value" android:layout_weight="0.5"
                android:textSize="24sp"
                android:textColor="@color/titleBadge" android:gravity="center_horizontal|center_vertical"
                tools:layout_editor_absoluteX="143dp" android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" android:fontFamily="sans-serif-condensed"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp" android:id="@+id/text_username_value"
                android:layout_weight="0.5"
                android:textSize="16sp"
                android:textColor="@color/titleBadge" android:gravity="center_horizontal|center_vertical"
                tools:layout_editor_absoluteX="49dp"
                app:layout_constraintTop_toBottomOf="@+id/text_name_value" android:fontFamily="sans-serif-light"/>
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@+id/text_username_value"
                android:background="@color/horizontalLine"
                tools:layout_editor_absoluteX="0dp"/>
        <TextView
                android:drawablePadding="4dp"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:layout_width="match_parent"
                android:layout_height="40dp" android:id="@+id/text_email_value" android:layout_weight="0.5"
                android:textSize="16sp"
                android:textColor="@color/titleBadge" android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/text_username_value" android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"/>
        <TextView
                android:drawablePadding="4dp"
                android:drawableLeft="@drawable/ic_supervisor_account_black_24dp"
                android:layout_width="match_parent"
                android:layout_height="40dp" android:id="@+id/text_roles_value" android:layout_weight="0.5"
                android:textSize="16sp"
                android:textColor="@color/titleBadge" android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/text_email_value" android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"/>
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@+id/text_roles_value"
                android:background="@color/horizontalLine"
                tools:layout_editor_absoluteX="0dp" android:id="@+id/view"/>
        <ImageView
                android:src="@drawable/profile_icon"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/imageView3" android:layout_marginTop="24dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
        />
    </android.support.constraint.ConstraintLayout>
</FrameLayout>